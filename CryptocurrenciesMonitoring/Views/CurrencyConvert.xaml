<Page x:Class="CryptocurrenciesMonitoring.CurrencyConvert"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptocurrenciesMonitoring"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CurrencyConvert">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">            
            <Label Content="First Currency" HorizontalAlignment="Center" Margin="10, 10, 0, 10"/>
            <ComboBox Name="firstCurrencyComboBox" Width="180" Height="20" Margin="10" />
            <Label Content="Second Currency" HorizontalAlignment="Center" Margin="100, 10, 0, 10"/>
            <ComboBox Name="secondCurrencyComboBox" Width="180" Height="20" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="1">            
            <TextBlock x:Name="cultureInform" Height="50" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
